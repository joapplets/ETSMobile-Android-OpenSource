<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:orientation="vertical" android:padding="10dip">

    <LinearLayout
        android:id="@+id/urgence_row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10sp" >

        <TextView
            android:id="@+id/urgence_secu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/urgence_secu_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/urgence_secu_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="@string/urgence_secu_phone"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="poste 55"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/urgence_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10sp" >

        <TextView
            android:id="@+id/urgence_rez_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/urgence_rez_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/urgence_rez_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="@string/urgence_rez_phone"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>

        <TextView
            android:id="@+id/urgence_rez_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="@string/urgence_rez_email"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/urgence_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10sp" >

        <TextView
            android:id="@+id/urgence_secr_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/urgence_secr_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/urgence_secr_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:text="@string/urgence_serc_phone"
            android:textAppearance="?android:attr/textAppearanceMedium" >
        </TextView>

        <TextView
            android:id="@+id/urgence_secr_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/urgence_secr_local"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" >
        </TextView>
    </LinearLayout>

</LinearLayout>