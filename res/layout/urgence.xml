<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/urgence_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:orientation="vertical" >

    <ca.etsmtl.applets.etsmobile.views.NavBar
        android:id="@+id/navBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </ca.etsmtl.applets.etsmobile.views.NavBar>

    <ScrollView
        android:id="@+id/urgence_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/urgence_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="gone" />

            <TextView
                android:id="@+id/urgence_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:fadingEdge="vertical"
                android:gravity="center|left"
                android:text="&lt;![CDATA[&lt;ul>&lt;li>Demeurer calme&lt;/li>&lt;li>Communiquer avec la sécurité à l’aide du bouton d’appel d’urgence ou du téléphone d’urgence en cabine&lt;/li>&lt;ul>&lt;li>Dans l’éventualité où; le dispositif pour communiquer avec la sécurité est"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:text="Voir PDF" />

</LinearLayout>