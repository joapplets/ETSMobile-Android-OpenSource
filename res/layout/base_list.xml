<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_list_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/news_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navbar_bg"
        android:orientation="horizontal"
        android:padding="5dip" >

        <ImageButton
            android:id="@+id/base_list_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:src="@drawable/icon_home" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dip"
            android:paddingRight="13dip"
            android:paddingTop="5dip"
            android:src="@drawable/navbar_news_title" />

        <Button
            android:id="@+id/base_list_source_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            android:text="Sources"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" android:background="@color/white" android:divider="@color/list_separator_color">
    </ListView>

</LinearLayout>