<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/program_list_row_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/program_list_row_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/news_image_placeholder" >
    </ImageView>

    <RelativeLayout
        android:id="@+id/program_list_row_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/program_list_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black" >
        </TextView>

        <TextView
            android:id="@+id/program_list_row_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/program_list_row_title"
            android:layout_alignRight="@+id/program_list_row_title"
            android:layout_below="@+id/program_list_row_title"
            android:text="TextView"
            android:textColor="@color/black" >
        </TextView>
    </RelativeLayout>

</LinearLayout>