<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.etsmtl.applets.etsmobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="15"
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <receiver android:name="ca.etsmtl.applets.etsmobile.receivers.NewsAlarmReceiver" />

        <service android:name=".services.NewsService" />
        <service android:name=".services.BottinService" >
        </service>

        <provider
            android:name=".providers.ETSMobileContentProvider"
            android:authorities="ca.etsmtl.applets.etsmobile.data"
            android:exported="false" >
        </provider>

        <activity
            android:name=".ETSMobileActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsListActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".preferences.NewsListPreferences"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".SingleNewsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".BottinListActivity" >
        </activity>
        <activity
            android:name=".CourseListActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
         <activity 
             android:name=".CoopActivity"
             android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity android:name=".AboutActivity" >
        </activity>
        <activity android:name=".BottinViewActivity" >
        </activity>
        <activity android:name=".SecurityActivity" >
        </activity>
        <activity android:name=".MyCourseSessionActivity" >
        </activity>
        <activity android:name=".MyCourseActivity" >
        </activity>
        <activity android:name=".MyCourseDetailActivity" >
        </activity>
        
        <activity 
            android:name=".CalendarActivity">
    		<intent-filter>
        		<action android:name="android.intent.action.PICK" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data android:mimeType="vnd.android.cursor.dir/vnd.exina.android.calendar.date" />
    		</intent-filter>
    		<intent-filter>
        		<action android:name="android.intent.action.VIEW" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<data android:mimeType="vnd.android.cursor.dir/vnd.exina.android.calendar.date" />
    		</intent-filter>
		</activity>

        <activity
            android:name=".views.AjoutEventActivity">
        </activity>
        <activity
            android:name=".views.CourseActivity">
        </activity>
        <activity
            android:name=".views.AllEventActivity">
        </activity>
        <activity
            android:name=".views.CourseDetailsActivity">
        </activity>
        <activity
            android:name=".views.EventDetailsActivity">
        </activity>
        
    </application>

    <!-- Apphance instrumentation -->
    <!-- <instrumentation -->
    <!-- android:name="com.apphance.android.ApphanceInstrumentation" -->
    <!-- android:targetPackage="ca.etsmtl.applets.etsmobile" > -->
    <!-- </instrumentation> -->

</manifest>